<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsXamarin.Layouts.Absolute.AbsolutePage">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout>
                <BoxView AbsoluteLayout.LayoutBounds="0,0,200,100" BackgroundColor="LightBlue"/>
                <BoxView AbsoluteLayout.LayoutBounds="50,50,100,100" BackgroundColor="LightCoral"/>
                <BoxView AbsoluteLayout.LayoutBounds="150,150,50,50" BackgroundColor="LightSeaGreen"/>

                <BoxView AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="0,200,20,100" BackgroundColor="LightPink"/>
                <BoxView AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="200,200,50,50" BackgroundColor="LightSteelBlue"/>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>